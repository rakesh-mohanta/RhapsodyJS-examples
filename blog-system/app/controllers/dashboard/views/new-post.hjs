<form id="new-post" action="/dashboard/{{action}}-post" method="POST">
	<fieldset>
		<legend>New post</legend>
		<input type="text" name="title" value="{{postTitle}}">
		<textarea name="content" cols="30" rows="10">{{content}}</textarea>
		<input type="hidden" name="post" value="{{id}}">
		<input type="submit">
	</fieldset>
</form>